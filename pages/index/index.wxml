<!--index.wxml-->
<view>
  <view class='container index'>

    <image src='/static/img/loading.svg' class="loading" wx:if="{{isLoading}}"></image>
    <swiper indicator-dots="{{indicatorDots}}" indicator-color='{{indicatorColor}}' indicator-active-color='{{indicatoractiveColor}}' autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{swiperData}}" wx:key="{{index}}">
        <swiper-item bindtap="jumpBook" data-id='{{item.book._id}}'>
          <image src="{{item.img}}" class="slide-image" />
        </swiper-item>
      </block>
    </swiper>
    <view class='main-content'>
      <view class='content-item' wx:for="{{mainContent}}" wx:key="{{index}}">
        <view class='title'>
          {{item.title}}
        </view>
        <view class='content' wx:for="{{item.books}}" wx:key="{{index}}" bindtap="jumpBook" data-id='{{item._id}}'>
          <view class='box-l'>
            <image src='{{item.img}}' class='img'></image>
          </view>
          <view class='box-r'>
            <view>
              <view class='book-title'>{{item.title}}</view>
              <view class='book-desc'>{{item.desc}}</view>
            </view>
            <view class='author'>
              <text class='author-l'>{{item.author}}</text>
              <view class='author-r'>
                <text class='updata-time'>两天前</text>
                <text class='category' wx:for="{{mainContent}}" wx:key="{{index}}">{{item.title.title}}</text>
                <text class='many'>有{{item.looknums}}人在看</text>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>

  </view>

  <!-- 上拉加载 -->
  <view wx:if="{{loadDone}}">
    <view class='loading-more' wx:if='{{hasMore}}'>
      <image src='/static/img/loadMore.svg' class='loadMore-img'></image>
      <text>正在拼命加载中</text>
    </view>

    <view class='no-more' wx:else>
      <text class='no-more-text'>已加载全部</text>
      <text class='line'></text>
    </view>
  </view>
</view>