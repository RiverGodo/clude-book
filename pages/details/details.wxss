/* pages/details.wxss */

.details .book-details{
  padding: 20rpx 20rpx 40rpx 20rpx;
  border-bottom: 8rpx solid #e9e9e9;

}

.book-t {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #444;

}

.book-t .title{
  color: #333;
  font-size: 14px;
  font-weight: 700;

}

.book-t .img{
  width: 220rpx;
  height: 280rpx;

}

.book-t .main-msg{
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}
.book-b{
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;

}

.book-b .btn{
  color: #333;
  margin: 0;
  width: 300rpx;
  font-size: 12px;
  background: #e9e9e9;
  border: 1px solid #e9e9e9;

}

 /* //简介部分 */
 .book-desc{
   padding: 30rpx 20rpx;
   font-size: 12px;
   line-height: 1.5;
   border-bottom: 2px solid #e9e9e9;



 }

.book-desc .title{
  font-weight: 700px;
  font-size: 15px;
}

.book-desc .desc-main{
font-size: 12px;
color: #333;
margin-top: 50rpx;
}

/* 查看目录 */

.book-catalog{
  padding: 0 20rpx;
  line-height: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;

}

.book-catalog .catalog-l{
  display: flex;
  justify-content: space-between;
  width: 300rpx;

}
.book-catalog .catalog-l .title{
  font-size: 15px;
  font-weight: 700;
  color: #333;

}

.catalogs{
  font-size: 12px;
  color: #444;
  
}

.updata-time{
  font-size: 10px;
  color:#444;
  
}

.read-btn-wrap {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  box-shadow: 0 0 2px 2px rgba(0,0,0, .2);
}

.read-btn-wrap .b-btn {
  background: #409eff;
  color: #fff;
  font-size: 12px;
  margin: 0;
}

.catalog-menu{
   position: fixed;
   left: 30rpx;
   top: 50rpx;
   bottom: 50rpx;
   right: 30rpx;
   margin-left: 50rpx;
   margin-bottom: 50rpx;
   z-index: 996;
   width: 600rpx;
   height: 900rpx;
   background-color: rgb(255, 255, 255);
   

}
.catalog-menu .catalog-item{
  font-size: 14px;
  color: #333;
  line-height: 70rpx;
  height: 70rpx;
  padding-left: 20rpx;

}
.catalog-menu .catalog-item:active{
  background: #f1f1f1;
}
.mask{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 888;
  background: rgba(0, 0, 0, 0.2);
}